<view class="container">
    <view bindtap="userinfo" class="userinfo">
        <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </view>
    <view class="page__bd">
        <view class="weui-cells__title"></view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">公司</view>
                <view class="weui-cell__ft">{{registerUserInfo.CompanyName}}</view>
            </view>
        </view>

        <view class="weui-cells__title"></view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">部门</view>
                <view class="weui-cell__ft">{{registerUserInfo.DepartmentName}}</view>
            </view>
        </view>

        <view class="weui-cells__title"></view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">团队</view>
                <view class="weui-cell__ft">{{registerUserInfo.TeamName}}</view>
            </view>
        </view>
    </view>
</view>